n_steps = 15000 
n_burn = 2000

all: pdf

pdf: data
	python poblaciones.py

data: ejecutable
	./mcmc_lotkavolterra.x $(n_steps) $(n_burn) > poblaciones.dat

ejecutable:
	gcc mcmc_lotkavolterra.c -lgsl -lgslcblas -lm -o mcmc_lotkavolterra.x

clean:
	rm -f mcmc_lotkavolterra.x  *.pdf poblaciones.dat 
